<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:myapp="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.ytb.myapp.widget.CommonBackgroundButton
        android:id="@+id/btn0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="btn0"
        myapp:color_normal="@color/lighter_blue"
        myapp:color_pressed="@color/darker_blue"
        myapp:fill_mode="solid"
        myapp:radius="5dp"
        myapp:shape="round_rect"
        myapp:stroke_mode="none"
        />

    <com.ytb.myapp.widget.CommonBackgroundButton
        android:id="@+id/btn1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="btn1"
        myapp:color_normal="@color/lighter_blue"
        myapp:color_pressed="@color/darker_blue"
        myapp:fill_mode="solid"
        myapp:radius="20dp"
        myapp:shape="circle"
        myapp:stroke_mode="none"
        />

</LinearLayout>