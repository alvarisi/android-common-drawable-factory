<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:text="stateful/stateMode" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="false"
            app:colorNormal="@color/lighter_blue"
            app:fillMode="solid"
            app:shape="rect"
            app:stateMode="click"
            app:stateful="false" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="click me"
            app:colorNormal="@color/lighter_blue"
            app:colorPressed="@color/darker_blue"
            app:fillMode="solid"
            app:shape="rect"
            app:stateMode="click"
            app:stateful="true" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundCheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="check me"
            app:colorChecked="@color/lighter_blue"
            app:colorStroke="@color/lighter_blue"
            app:colorUnchecked="@android:color/white"
            app:fillMode="solid"
            app:shape="semicircle_rect"
            app:stateMode="check"
            app:stateful="true"
            app:strokeMode="solid"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:text="shape" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="rect"
            app:colorNormal="@color/lighter_blue"
            app:fillMode="solid"
            app:shape="rect"
            app:stateful="false" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="round_rect"
            app:colorNormal="@color/lighter_blue"
            app:fillMode="solid"
            app:radius="10dp"
            app:shape="round_rect"
            app:stateful="false" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="semicircle_rect"
            app:colorNormal="@color/lighter_blue"
            app:fillMode="solid"
            app:shape="semicircle_rect"
            app:stateful="false" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="circle"
            app:colorNormal="@color/lighter_blue"
            app:fillMode="solid"
            app:shape="circle"
            app:stateful="false" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:text="fillMode" />


        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="solid"
            app:colorNormal="@color/lighter_blue"
            app:fillMode="solid"
            app:shape="rect"
            app:stateful="false" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="bitmap"
            app:bitmap="@mipmap/ic_launcher"
            app:colorNormal="@color/lighter_blue"
            app:fillMode="bitmap"
            app:shape="rect"
            app:stateful="false" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="solid|bitmap\n(click me)"
            app:bitmap="@mipmap/ic_launcher"
            app:colorNormal="#FFFFFFFF"
            app:colorPressed="#88FFFFFF"
            app:fillMode="solid|bitmap"
            app:shape="rect"
            app:stateful="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:text="scaleType" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="center"
            app:bitmap="@mipmap/ic_launcher"
            app:colorStroke="@color/lighter_blue"
            app:fillMode="bitmap"
            app:scaleType="center"
            app:shape="rect"
            app:stateful="false"
            app:strokeMode="solid"
            app:strokeWidth="1dp" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="centerCrop"
            app:bitmap="@mipmap/ic_launcher"
            app:colorStroke="@color/lighter_blue"
            app:fillMode="bitmap"
            app:scaleType="centerCrop"
            app:shape="rect"
            app:stateful="false"
            app:strokeMode="solid"
            app:strokeWidth="1dp" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="fitCenter"
            app:bitmap="@mipmap/ic_launcher"
            app:colorStroke="@color/lighter_blue"
            app:fillMode="bitmap"
            app:scaleType="fitCenter"
            app:shape="rect"
            app:stateful="false"
            app:strokeMode="solid"
            app:strokeWidth="1dp" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="fitXY"
            app:bitmap="@mipmap/ic_launcher"
            app:colorStroke="@color/lighter_blue"
            app:fillMode="bitmap"
            app:scaleType="fitXY"
            app:shape="rect"
            app:stateful="false"
            app:strokeMode="solid"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:text="strokeMode" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="solid"
            app:colorNormal="@android:color/white"
            app:colorStroke="@color/lighter_blue"
            app:fillMode="solid"
            app:shape="semicircle_rect"
            app:stateful="false"
            app:strokeMode="solid"
            app:strokeWidth="2dp" />

        <com.ytb.myapp.widget.commonbackground.CommonBackgroundTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="dash"
            app:colorStroke="@color/lighter_blue"
            app:fillMode="solid"
            app:shape="rect"
            app:stateful="false"
            app:strokeDashSolid="5dp"
            app:strokeDashSpace="5dp"
            app:strokeMode="dash"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see more attributes in /res/values/attr.xml" />

    <com.ytb.myapp.widget.commonbackground.CommonBackgroundButton
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:colorPressed="@android:color/darker_gray"
        app:colorStroke="@color/lighter_blue"
        app:radius="8dp"
        app:shape="round_rect"
        app:stateMode="click"
        app:stateful="true"
        app:strokeMode="solid"
        app:strokeWidth="3dp" />
</LinearLayout>